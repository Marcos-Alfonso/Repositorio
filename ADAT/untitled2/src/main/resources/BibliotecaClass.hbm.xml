<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.BibliotecaClass" table="biblioteca" schema="unidad2">
        <id name="numero">
            <column name="NUMERO" sql-type="int(11)"/>
        </id>
        <property name="titulo">
            <column name="TITULO" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="autor">
            <column name="AUTOR" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="fnac">
            <column name="FNAC" sql-type="date" not-null="true"/>
        </property>
        <property name="fechapub">
            <column name="FECHAPUB" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>