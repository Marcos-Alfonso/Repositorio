<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.DepartamentosClass" table="departamentos" schema="unidad2">
        <id name="deptNo" column="dept_no"/>
        <property name="dnombre" column="dnombre"/>
        <property name="loc" column="loc"/>
        <set name="empleadosByDeptNo" inverse="true">
            <key>
                <column name="dept_no"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.EmpleadosClass"/>
        </set>
    </class>
</hibernate-mapping>