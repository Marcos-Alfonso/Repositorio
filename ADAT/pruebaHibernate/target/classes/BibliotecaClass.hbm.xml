<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.BibliotecaClass" table="biblioteca" schema="unidad2">
        <id name="numero" column="NUMERO"/>
        <property name="titulo" column="TITULO"/>
        <property name="autor" column="AUTOR"/>
        <property name="fnac" column="FNAC"/>
        <property name="fechapub" column="FECHAPUB"/>
    </class>
</hibernate-mapping>