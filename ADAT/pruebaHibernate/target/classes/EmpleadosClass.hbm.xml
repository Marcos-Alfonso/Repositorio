<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.EmpleadosClass" table="empleados" schema="unidad2">
        <id name="empNo" column="emp_no"/>
        <property name="apellido" column="apellido"/>
        <property name="oficio" column="oficio"/>
        <property name="dir" column="dir"/>
        <property name="fechaAlt" column="fecha_alt"/>
        <property name="salario" column="salario"/>
        <property name="comision" column="comision"/>
        <many-to-one name="departamentosByDeptNo" class="org.example.DepartamentosClass">
            <column name="dept_no"/>
        </many-to-one>
    </class>
</hibernate-mapping>