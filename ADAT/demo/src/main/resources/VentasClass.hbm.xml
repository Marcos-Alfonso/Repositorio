<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.demo.VentasClass" table="ventas" schema="unidad2">
        <id name="idventa">
            <column name="IDVENTA" sql-type="smallint(5) unsigned"/>
        </id>
        <property name="fechaventa">
            <column name="FECHAVENTA" sql-type="date"/>
        </property>
        <property name="idcliente">
            <column name="IDCLIENTE" sql-type="tinyint(3) unsigned"/>
        </property>
        <property name="idproducto">
            <column name="IDPRODUCTO" sql-type="mediumint(8) unsigned"/>
        </property>
        <property name="cantidad">
            <column name="CANTIDAD" sql-type="tinyint(3) unsigned"/>
        </property>
    </class>
</hibernate-mapping>