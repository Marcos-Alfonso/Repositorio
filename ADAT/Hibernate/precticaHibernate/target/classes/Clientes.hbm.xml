<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.modeloVentas.Clientes" table="clientes" schema="unidad2">
        <id name="id" column="ID"/>
        <property name="nombre" column="NOMBRE"/>
        <property name="direccion" column="DIRECCION"/>
        <property name="poblacion" column="POBLACION"/>
        <property name="telef" column="TELEF"/>
        <property name="nif" column="NIF"/>
        <set name="ventasById" inverse="true">
            <key>
                <column name="IDCLIENTE"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.modeloVentas.Ventas"/>
        </set>
    </class>
</hibernate-mapping>