<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.modeloVentas.Productos" table="productos" schema="unidad2">
        <id name="id" column="ID"/>
        <property name="descripcion" column="DESCRIPCION"/>
        <property name="stockactual" column="STOCKACTUAL"/>
        <property name="stockminimo" column="STOCKMINIMO"/>
        <property name="pvp" column="PVP"/>
        <set name="ventasById" inverse="true">
            <key>
                <column name="IDPRODUCTO"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.modeloVentas.Ventas"/>
        </set>
    </class>
</hibernate-mapping>