<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.Modelos.PelArt" table="pel_art" schema="peliculas" >
        <composite-id name="pk" class="org.example.Modelos.PelArtPK">
            <key-property name="peliculaId" column="pelicula_id"/>
            <key-property name="artistaId" column="artista_id"/>
        </composite-id>
        <many-to-one name="peliculasByPeliculaId" class="org.example.Modelos.Peliculas" insert="false" update="false" >
            <column name="pelicula_id"/>
        </many-to-one>
        <many-to-one name="artistasByArtistaId" class="org.example.Modelos.Artistas" insert="false" update="false" >
            <column name="artista_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>