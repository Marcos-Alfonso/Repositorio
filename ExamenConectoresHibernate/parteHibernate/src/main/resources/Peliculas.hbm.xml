<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.Modelos.Peliculas" table="peliculas" schema="peliculas">
        <id name="peliculaId" column="pelicula_id"/>
        <property name="titulo" column="titulo"/>
        <property name="peliAnno" column="peli_anno"/>
        <property name="estudioId" column="estudio_id"/>
        <property name="directorId" column="director_id"/>
        <many-to-one name="estudiosByEstudioId" class="org.example.Modelos.Estudios" insert="false" update="false" >
            <column name="estudio_id"/>
        </many-to-one>
        <many-to-one name="artistasByDirectorId" class="org.example.Modelos.Artistas" insert="false" update="false">
            <column name="director_id"/>
        </many-to-one>
        <set name="pelArtsByPeliculaId" inverse="true" cascade="delete">
            <key>
                <column name="pelicula_id"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.Modelos.PelArt"/>
        </set>
    </class>
</hibernate-mapping>